@using COMP_2084_Assigment_1.Models.Landlord
@model Landlord
@{
    ViewData["Title"] = "Edit Landlord Page";
}
<form method="post">
<div class="row">
    <div class="col-6">
        <label>First Name:</label>
        <input asp-for="@Model.FirstName" class="form-control"  />
    </div>
    <div class="col-6">
        <label>Last Name:</label>
        <input asp-for="@Model.LastName" class="form-control"  />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <label>Company Name:</label>
        <input asp-for="@Model.CompanyName" class="form-control"  />
    </div>
    <div class="col-6">
        <label>Email:</label>
        <input asp-for="@Model.EmailAddress" class="form-control"  />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <label>Primary Phone:</label>
        <input asp-for="@Model.PrimaryPhoneNumber" class="form-control"  />
    </div>
    <div class="col-6">
        <label>Secondary Phone:</label>
        <input asp-for="@Model.SecondaryPhoneNumber" class="form-control"  />
    </div>
</div>
<div class="row mt-3 d-flex justify-content-center">
    <div class="col-12">
        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
    </div>
</div>
  @Html.HiddenFor(x => x.Id)
</form>